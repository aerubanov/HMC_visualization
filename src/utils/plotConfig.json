{
  "CONTOUR": {
    "grid": {
      "resolution": 50,
      "xRange": [-5, 5],
      "yRange": [-5, 5]
    },
    "styles": {
      "labelColor": "#1a1a1a"
    }
  },
  "HMC_SAMPLER": {
    "styles": {
      "primaryColor": "#d73a49",
      "secondaryColor": "#0366d6"
    },
    "trajectory": {
      "line": {
        "width": 2,
        "shape": "linear"
      },
      "marker": {
        "size": 4,
        "symbol": "circle"
      }
    },
    "samples": {
      "line": {
        "width": 1,
        "dash": "dash"
      },
      "marker": {
        "size": 6,
        "symbol": "circle",
        "opacity": 0.8
      }
    }
  },
  "TRACE_PLOT": {
    "styles": {
      "burnInOpacity": 0.3
    },
    "layout": {
      "font": {
        "color": "#1a1a1a",
        "family": "Inter, system-ui, sans-serif",
        "size": 10
      },
      "xaxis": {
        "title": "Iteration",
        "showgrid": false,
        "zeroline": false
      },
      "yaxis": {
        "showgrid": true,
        "zeroline": false
      },
      "margin": {
        "l": 50,
        "r": 20,
        "t": 30,
        "b": 40
      }
    }
  },
  "GENERAL": {
    "layout": {
      "autosize": true,
      "paper_bgcolor": "#f8f9fa",
      "plot_bgcolor": "#ffffff",
      "font": {
        "color": "#1a1a1a",
        "family": "Inter, system-ui, sans-serif",
        "size": 12
      },
      "xaxis": {
        "title": "x",
        "gridcolor": "#e1e4e8",
        "zeroline": true,
        "zerolinecolor": "#e1e4e8",
        "showline": true,
        "mirror": true,
        "ticks": "outside",
        "linecolor": "#1a1a1a"
      },
      "yaxis": {
        "title": "y",
        "gridcolor": "#e1e4e8",
        "zeroline": true,
        "zerolinecolor": "#e1e4e8",
        "showline": true,
        "mirror": true,
        "ticks": "outside",
        "linecolor": "#1a1a1a"
      },
      "margin": {
        "l": 60,
        "r": 40,
        "t": 40,
        "b": 60
      }
    },
    "config": {
      "responsive": true,
      "displayModeBar": true,
      "displaylogo": false,
      "modeBarButtonsToRemove": ["lasso2d", "select2d"],
      "toImageButtonOptions": {
        "format": "png",
        "filename": "hmc_visualization",
        "height": 800,
        "width": 800,
        "scale": 2
      }
    }
  }
}
